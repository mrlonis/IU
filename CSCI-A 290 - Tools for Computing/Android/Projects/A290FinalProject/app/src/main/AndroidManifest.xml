<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.indiana.mrlonis.a290finalproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".A290FinalProjectMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProjectListActivity"
            android:label="@string/title_project_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ProjectDetailActivity"
            android:label="@string/title_project_detail"
            android:parentActivityName=".ProjectListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.indiana.mrlonis.a290finalproject.ProjectListActivity" />
        </activity>
    </application>

</manifest>