<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_view_c343"
    tools:context="edu.indiana.mrlonis.a290finalproject.csciC343Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/csciC343CourseInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/course_info"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="14pt" />

        <TextView
            android:id="@+id/csciC343CourseDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/csci_c343_course"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/csciC343Project1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/project_1"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="14pt" />

        <TextView
            android:id="@+id/csciC343Project1Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="@string/csci_c343_project1_name"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/csciC343Project1Description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/csci_c343_project1_description"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/csciC343Project1File"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/csci_c343_project1_file"
            android:layout_marginTop="10dp"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>
